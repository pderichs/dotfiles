;; Some functionality uses this to identify you, e.g. GPG configuration, email
;; clients, file templates and snippets. It is optional.
(setq user-full-name "<USERNAME>"
      user-mail-address "<EMAIL>"

      user-personal-data-folder (concat (getenv "HOME") "/<DATAFOLDER>")
      user-personal-documents-folder (concat user-personal-data-folder "/<DOCUMENTSFOLDER>")
      user-personal-zettelkasten-folder (file-truename org-roam-directory))
